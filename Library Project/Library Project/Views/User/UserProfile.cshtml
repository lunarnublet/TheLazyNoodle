@model UserProfile
@{
    ViewBag.Title = "User Profile";
}

@section heading {
    <div class=header>
        <h1 class=header-heading>User Page</h1>
    </div>
}

@section body {
    <div>
        <h2>Username: </h2>@Model.username<br/><br/>
        <h2>Roles:</h2>
        @for (int i = 0; i < Model.Roles.Count; ++i)
        {
            @Model.Roles.ElementAt(i).roleName
            
        }
        <br/><br/>
        <table>
            <tr>
                <th colspan="2" id="tableTitle">Books</th>
            </tr>
            <tr>
                <th>Book Id</th>
                <th>Title</th>
            </tr>
            @for (int i = 0; i < Model.Books.Count; ++i)
            {
                <tr>
                <td>@Model.Books.ElementAt(i).Id</td>
                <td>@Model.Books.ElementAt(i).Title</td>
                </tr>
            }
        </table>
    </div>
}
